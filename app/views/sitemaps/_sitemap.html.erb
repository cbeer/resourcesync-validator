<li class="sitemap">
  <h4 class="loc"><%= link_to sitemap.loc, validate_sitemap_path(sitemap: { url: sitemap.loc}) %>
    <small><%= link_to "[xml]", sitemap.loc %></small>
  </h4>
  
  <dl>
    <dt>Last modified:</dt>
    <dd class="lastmod"><time><%= sitemap.lastmod %></time></dd>
    <% if sitemap.changefreq %>
    <dt>Change Frequency:</dt>
    <dd class="changefreq"><%= sitemap.changefreq %></dd>
    <% end %>
  </dl>
</li>
