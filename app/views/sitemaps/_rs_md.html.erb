<dl class="dl-horizontal">
<% @sitemap.md.each do |m| %>
<dt>md</dt>
<dd>
  <% m.each do |k,v| %>
    <div><%= k %>: <%= v %></div>
  <% end %>
</dd>
<% end %>

<% @sitemap.ln.each do |m| %>
<dt><%= m["rel"] %></dt>
<dd>
  <% case m["rel"] %>
  <% when "up" %>
  <%= link_to m["href"], validate_sitemap_path(sitemap: { url: m["href"]}) %>
    <small><%= link_to "[xml]", m["href"] %></small>
  <% else %>
    <%= link_to m["href"], m["href"] %>
  <% end %>

  <% m.except("rel", "href").each do |k,v| %>
    <%= k %> <%= v %>
  <% end %>
</dd>
<% end %>
</dl>
